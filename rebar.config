%% -*- mode:erlang -*-
{erl_opts, [debug_info]}.

{escript_name, example_model2}.
{escript_emu_args, "%%! -escript main example_model2\n"}.
{escript_incl_apps, [map_sets]}.

{deps, [ {map_sets, "1.1.0"}
       , {snabbkaffe, "1.0.1"}
       , {typerefl, {git, "https://github.com/ieQu1/typerefl.git", {tag, "0.9.2"}}}
       ]}.

{cover_enabled, true}.

{edoc_opts, [{preprocess, true}]}.

{eunit_output, full}.

%{dialyzer, [{warnings, [overspecs, underspecs]}]}.

{profiles, [ {demo,
              [{src_dirs, ["src", "doc/example"]}]}
           , {test,
              [{deps, [{proper, "1.3.0"}]}]}
           , {dev, [{plugins, [rebar3_hex]}]}
           ]}.
